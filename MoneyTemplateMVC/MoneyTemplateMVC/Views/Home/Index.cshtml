@model MoneyTemplateMVC.Models.ViewModels.MoneyCreateViewModel
@{
    ViewBag.Title = "我的記帳本";
}


<div class="well">
    @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(x => x.Category, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EnumDropDownListFor(x => x.Category, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group">

            @Html.LabelFor(x => x.Amount, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Amount, new { @class = "form-control", placeholder = "金額", @type = "number" })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.CreateTime, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CreateTime, new { @class = "form-control", placeholder = "日期", @type = "date" })
                @Html.ValidationMessageFor(model => model.CreateTime, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Remark, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.Remark, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    }
</div>
<div class="row">
    <div class="col-md-12">
        @Html.Action("List")
    </div>
</div>
